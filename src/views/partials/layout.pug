- var dir = lang === "ar" ? "rtl" : "ltr"
- var main = translationManager.translate('main', {}, lang)
- var contact_us = translationManager.translate('contact_us', {}, lang)
- var support_us = translationManager.translate('support_us', {}, lang)
- var registration = translationManager.translate('registration', {}, lang)
- var about_us = translationManager.translate('about_us', {}, lang)
- var privacy = translationManager.translate('privacy', {}, lang)
- var forgot_password = translationManager.translate('forgot_password', {}, lang)
- var top_page = translationManager.translate('top_page', {}, lang)

doctype html
html(lang="ar" data-theme="light")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(property="og:site_name" content=website_name)
        meta(property="og:type" content="website")
        meta(property="og:title" content="")
        meta(property="og:image" content="")
        meta(name="keywords" content="")
        meta(name="description" content="")
        title="عنوان الموقع"
        link(rel="stylesheet" href="/css/main.css")
        script.
            if (localStorage.getItem("theme") == "dark") document.documentElement.setAttribute("data-theme", "dark");
        block stylesheet
    body
        header#header
            include ./header.pug
        main
            #breadcrumb
                include ./breadcrumb.pug
            #content 
                block content
        footer#footer
            #powered_by
                p Powered by 
                    a(href="https://github.com/Hiwarat" title="Hiwarat" aria-label="Hiwarat") Hiwarat&copy;
                    span=` Version ${version}`  
            include ./footer.pug
        block script
        script(type="module").
            const footer_top_page = document.getElementById("footer_top_page");
            if (footer_top_page) {
                footer_top_page.addEventListener('click', function(event) {
                    event.preventDefault();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            }