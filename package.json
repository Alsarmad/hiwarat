{
    "name": "hiwarat",
    "version": "1.0.0",
    "description": "Hiwarat is a platform for engaging discussions and dialogues on diverse topics, promoting exchange of ideas and constructive conversations.",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "DEBUG": "DEBUG=* node src/server.js",
        "dev": "nodemon --exec node src/server.js",
        "database": "node src/database/databaseInitializer.js"
    },
    "nodemonConfig": {
        "ignore": [
            "src/public"
        ]
    },
    "author": {
        "name": "ryan almalki",
        "url": "https://github.com/rn0x"
    },
    "keywords": [
        "dialogues",
        "forum",
        "discussions",
        "interactivity",
        "exchange of opinions",
        "constructive communication",
        "mutual dialogue",
        "collaboration",
        "mutual respect",
        "exchange of ideas"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rn0x/hiwarat.git"
    },
    "bugs": {
        "url": "https://github.com/rn0x/hiwarat/issues"
    },
    "homepage": "https://github.com/rn0x/hiwarat#readme",
    "license": "GPL-3.0",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "better-sqlite3": "^10.0.0",
        "body-parser": "^1.20.2",
        "canvas": "^2.11.2",
        "captcha-ge": "^1.0.9",
        "compression": "^1.7.4",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-rate-limit": "^7.2.0",
        "fs-extra": "^11.2.0",
        "helmet": "^7.1.0",
        "html-to-text": "^9.0.5",
        "marked": "^12.0.2",
        "node-fetch": "^3.3.2",
        "serve-favicon": "^2.5.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    }
}
